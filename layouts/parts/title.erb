<div id='intro'>
  <div class='bg1'></div>
  <div class='title'>
    <div class='intro-line'></div>
    <h1>12urenloop</h1>
    <div class='intro-line'></div>
    <h1 class='small'><%= item[:date] %> @<%= item[:location] %></h1>
    <a href='https://live.12urenloop.be'><div class='button2'>Volg hier live de resultaten</div></a>
    <div class='container centered' id='countdown'>
      <span class='two-numbers'>
        <span id='countdown-weeks'>
          <span class='number'>0</span>
